@model CoreAndFood.Models.Category
@{
    ViewData["Title"] = "CategoryGet";
    Layout = "~/Views/Shared/_CoreFoodLayout.cshtml";
}

<h1 class="display-6">Category Update Page</h1>
<br />
@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    @Html.Label("Category ID")
    @Html.TextBoxFor(x=>x.CategoryID, new {@class = "form-control"})
    <hr />
    @Html.Label("Category Name")
    @Html.TextBoxFor(x=>x.CategoryName, new {@class = "form-control"} )
    @Html.ValidationMessageFor(x=>x.CategoryName,"",new {@style = "color:red"})
    <hr />
    @Html.Label("Category Description")
    @Html.TextBoxFor(x=>x.CategoryDescription,new {@class = "form-control"})
    <hr />
    <button class="btn btn-outline-info">Update</button>
}

