@model List<CoreAndFood.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreFoodLayout.cshtml";
}

<h2>Category List</h2>
<br />
@using (Html.BeginForm())
{
    <p>
        Food Name:@Html.TextBox("p")
        <input id="sbmt" type="submit" value="Find" />
    </p>
}
<table class="table table-bordered table-dark">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var x in Model)
    {
    <tr>
        <td>@x.CategoryID</td>
        <td>@x.CategoryName</td>
        <td>@x.Status</td>
            <td><a asp-action="CategoryDelete" asp-controller="Category" asp-route-id="@x.CategoryID" class="btn btn-outline-danger">Delete</a></td>
        <td><a asp-action="CategoryGet" asp-controller="Category" asp-route-id="@x.CategoryID" class="btn btn-outline-info">Update</a></td>
    </tr>
    }
</table>
<a asp-action="CategoryAdd" asp-controller="Category" class="btn btn-dark">Add New Category</a>

